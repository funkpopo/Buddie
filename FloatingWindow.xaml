<Window x:Class="Buddie.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Buddie"
        xmlns:controls="clr-namespace:Buddie.Controls"
        Title="Buddie"
        Width="500"
        Height="860"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        MouseEnter="FloatingWindow_MouseEnter"
        MouseLeave="FloatingWindow_MouseLeave">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <!-- 卡片控件 -->
        <controls:CardControl x:Name="cardControl"/>
        
        <!-- 对话界面 -->
        <controls:DialogControl x:Name="DialogControl"/>
        
        <!-- 设置界面 -->
        <controls:SettingsControl x:Name="SettingsControl"/>
        
        <!-- 左边按钮 - 用于切换卡片 -->
        <Button x:Name="LeftFlipButton"
                Content="◀"
                Width="35"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,235,75"
                Background="#40FFFFFF"
                Foreground="#666666"
                BorderThickness="0"
                FontSize="12"
                FontWeight="Bold"
                Click="LeftFlipButton_Click"
                Cursor="Hand"
                ToolTip="上一张卡片 / 翻转卡片（当卡片已翻转时）"
                Style="{StaticResource CircularButtonStyle}"/>
        
        <!-- 右边按钮 - 用于切换卡片 -->
        <Button x:Name="RightFlipButton"
                Content="▶"
                Width="35"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,5,75"
                Background="#40FFFFFF"
                Foreground="#666666"
                BorderThickness="0"
                FontSize="12"
                FontWeight="Bold"
                Click="RightFlipButton_Click"
                Cursor="Hand"
                ToolTip="下一张卡片 / 翻转卡片（当卡片已翻转时）"
                Style="{StaticResource CircularButtonStyle}"/>
    </Grid>
</Window>