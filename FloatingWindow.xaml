<Window x:Class="Buddie.FloatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buddie"
        Width="500"
        Height="1000"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 卡片阴影效果 -->
        <DropShadowEffect x:Key="CardShadow" 
                         Color="Black" 
                         Direction="270" 
                         ShadowDepth="5" 
                         Opacity="0.3" 
                         BlurRadius="10"/>
        
        <!-- 卡片正面渐变背景 -->
        <LinearGradientBrush x:Key="CardFrontGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightBlue" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 卡片背面渐变背景 -->
        <LinearGradientBrush x:Key="CardBackGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="LightCoral" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    
    <Border Background="#80000000" 
            CornerRadius="10"
            Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏区域，用于拖拽移动 -->
            <Border Grid.Row="0" 
                    Background="#40FFFFFF"
                    CornerRadius="10,10,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Buddie" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                               FontWeight="Bold"/>
                    <Button Content="×"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="20"
                            Height="20"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="Bold"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </Grid>
            </Border>
            
            <!-- 内容区域 -->
            <Border Grid.Row="1" 
                    Background="#60FFFFFF"
                    CornerRadius="0,0,10,10">
                <Grid>
                    <!-- 主内容区域 -->
                    <StackPanel Margin="20"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                        <TextBlock Text="悬浮窗示例" 
                                   Foreground="Black"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="这是一个置顶的悬浮窗"
                                   Foreground="Black"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- 固定在右下角的卡片 -->
                    <Border x:Name="CardContainer"
                            Width="200"
                            Height="150"
                            Background="White"
                            CornerRadius="15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,38,20"
                            Effect="{StaticResource CardShadow}">
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform x:Name="CardScaleTransform" CenterX="100" CenterY="75"/>
                                <RotateTransform x:Name="CardRotateTransform" CenterX="100" CenterY="75"/>
                                <TranslateTransform x:Name="CardTranslateTransform"/>
                            </TransformGroup>
                        </Border.RenderTransform>
                        
                        <Grid>
                            <!-- 卡片正面 -->
                            <Border x:Name="CardFront"
                                    Background="{StaticResource CardFrontGradient}"
                                    CornerRadius="15">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="卡片正面"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>
                                    <TextBlock Text="点击按钮翻转"
                                              FontSize="12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- 卡片背面 -->
                            <Border x:Name="CardBack"
                                    Background="{StaticResource CardBackGradient}"
                                    CornerRadius="15"
                                    Visibility="Collapsed">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="卡片背面"
                                              FontSize="18"
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,10"/>
                                    <TextBlock Text="再次点击翻回"
                                              FontSize="12"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- 左边按钮 - 用于切换卡片 -->
                    <Button x:Name="LeftFlipButton"
                           Content="◀"
                           Width="35"
                           Height="35"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,235,75"
                           Background="#40FFFFFF"
                           Foreground="#666666"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="Bold"
                           Click="LeftFlipButton_Click"
                           Cursor="Hand"
                           ToolTip="上一张卡片 / 翻转卡片（当卡片已翻转时）">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                        <Setter Property="Foreground" Value="#40666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 右边按钮 - 用于切换卡片 -->
                    <Button x:Name="RightFlipButton"
                           Content="▶"
                           Width="35"
                           Height="35"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,5,75"
                           Background="#40FFFFFF"
                           Foreground="#666666"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="Bold"
                           Click="RightFlipButton_Click"
                           Cursor="Hand"
                           ToolTip="下一张卡片 / 翻转卡片（当卡片已翻转时）">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                        <Setter Property="Foreground" Value="#40666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 卡片指示器 -->
                    <StackPanel x:Name="CardIndicator"
                              Orientation="Horizontal"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Margin="0,0,95,40">
                        <!-- 动态生成卡片指示点 -->
                    </StackPanel>
                    
                    <!-- 卡片信息显示 -->
                    <TextBlock x:Name="CardInfo"
                              Text="卡片 1 / 4"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Bottom"
                              Margin="0,0,90,20"
                              Foreground="White"
                              FontSize="10"
                              Background="#80000000"
                              Padding="5,2"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>