                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="TextBox">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                                                       CornerRadius="6"
                                                                                       Padding="{TemplateBinding Padding}">
                                                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                                        
                                                                        <!-- Speed -->
                                                                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                                                                  Text="语速:" 
                                                                                  FontWeight="Bold" 
                                                                                  Margin="0,0,10,15" 
                                                                                  VerticalAlignment="Center"
                                                                                  Foreground="#495057"/>
                                                                        <Grid Grid.Row="5" Grid.Column="1" Margin="0,0,10,15">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="60"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <Slider x:Name="TtsEditSpeedSlider" 
                                                                                   Grid.Column="0"
                                                                                   Minimum="0.25" 
                                                                                   Maximum="4.0" 
                                                                                   Value="{Binding Speed, Mode=TwoWay}" 
                                                                                   TickFrequency="0.25" 
                                                                                   IsSnapToTickEnabled="True"
                                                                                   ValueChanged="TtsEditSpeedSlider_ValueChanged"/>
                                                                            <TextBlock x:Name="TtsEditSpeedValueText" 
                                                                                      Grid.Column="1"
                                                                                      Text="{Binding Speed, StringFormat={}{0:F2}x}" 
                                                                                      VerticalAlignment="Center" 
                                                                                      HorizontalAlignment="Center"
                                                                                      Foreground="#495057"
                                                                                      FontWeight="Bold"/>
                                                                        </Grid>
                                                                        
                                                                        <!-- 操作按钮 -->
                                                                        <StackPanel Grid.Row="6" Grid.Column="1" 
                                                                                   Orientation="Horizontal"
                                                                                   HorizontalAlignment="Right"
                                                                                   Margin="0,10,10,0">
                                                                            <Button Content="保存"
                                                                                   Background="#007BFF"
                                                                                   Foreground="White"
                                                                                   BorderThickness="0"
                                                                                   Padding="16,8"
                                                                                   Margin="0,0,10,0"
                                                                                   FontWeight="Bold"
                                                                                   Click="SaveTtsConfig_Click"
                                                                                   Cursor="Hand">
                                                                                <Button.Style>
                                                                                    <Style TargetType="Button">
                                                                                        <Setter Property="Template">
                                                                                            <Setter.Value>
                                                                                                <ControlTemplate TargetType="Button">
                                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                                           CornerRadius="6"
                                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                           Padding="{TemplateBinding Padding}">
                                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                                         VerticalAlignment="Center"/>
                                                                                                    </Border>
                                                                                                    <ControlTemplate.Triggers>
                                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                                            <Setter Property="Background" Value="#0056B3"/>
                                                                                                        </Trigger>
                                                                                                    </ControlTemplate.Triggers>
                                                                                                </ControlTemplate>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Style>
                                                                                </Button.Style>
                                                                            </Button>
                                                                            <Button Content="取消"
                                                                                   Background="#6C757D"
                                                                                   Foreground="White"
                                                                                   BorderThickness="0"
                                                                                   Padding="16,8"
                                                                                   FontWeight="Bold"
                                                                                   Click="CancelTtsConfig_Click"
                                                                                   Cursor="Hand">
                                                                                <Button.Style>
                                                                                    <Style TargetType="Button">
                                                                                        <Setter Property="Template">
                                                                                            <Setter.Value>
                                                                                                <ControlTemplate TargetType="Button">
                                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                                           CornerRadius="6"
                                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                           Padding="{TemplateBinding Padding}">
                                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                                         VerticalAlignment="Center"/>
                                                                                                    </Border>
                                                                                                    <ControlTemplate.Triggers>
                                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                                            <Setter Property="Background" Value="#545B62"/>
                                                                                                        </Trigger>
                                                                                                    </ControlTemplate.Triggers>
                                                                                                </ControlTemplate>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Style>
                                                                                </Button.Style>
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                                
                                                                <!-- 显示模式 -->
                                                                <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="Auto"/>
                                                                        </Grid.RowDefinitions>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        
                                                                        <!-- 配置名称 -->
                                                                        <TextBlock Grid.Row="0" Grid.Column="0"
                                                                                  Text="{Binding Name}"
                                                                                  FontWeight="Bold"
                                                                                  FontSize="18"
                                                                                  Foreground="#212529"
                                                                                  Margin="0,0,0,8"/>
                                                                        
                                                                        <!-- API URL -->
                                                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                                            <TextBlock Text="API URL: " FontWeight="Bold" Foreground="#6C757D"/>
                                                                            <TextBlock Text="{Binding ApiUrl}" Foreground="#495057"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- 模型 -->
                                                                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,8">
                                                                            <TextBlock Text="模型: " FontWeight="Bold" Foreground="#6C757D"/>
                                                                            <TextBlock Text="{Binding Model}" Foreground="#495057"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- 语音 -->
                                                                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,15">
                                                                            <TextBlock Text="语音: " FontWeight="Bold" Foreground="#6C757D"/>
                                                                            <TextBlock Text="{Binding Voice}" Foreground="#495057"/>
                                                                        </StackPanel>
                                                                        
                                                                        <!-- 操作按钮 -->
                                                                        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="4"
                                                                                   Orientation="Horizontal"
                                                                                   VerticalAlignment="Center">
                                                                            <Button Content="编辑"
                                                                                   Background="#FFC107"
                                                                                   Foreground="White"
                                                                                   BorderThickness="0"
                                                                                   Padding="12,6"
                                                                                   Margin="0,0,8,0"
                                                                                   FontWeight="Bold"
                                                                                   Click="EditTtsConfig_Click"
                                                                                   Cursor="Hand">
                                                                                <Button.Style>
                                                                                    <Style TargetType="Button">
                                                                                        <Setter Property="Template">
                                                                                            <Setter.Value>
                                                                                                <ControlTemplate TargetType="Button">
                                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                                           CornerRadius="6"
                                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                           Padding="{TemplateBinding Padding}">
                                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                                         VerticalAlignment="Center"/>
                                                                                                    </Border>
                                                                                                    <ControlTemplate.Triggers>
                                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                                            <Setter Property="Background" Value="#E0A800"/>
                                                                                                        </Trigger>
                                                                                                    </ControlTemplate.Triggers>
                                                                                                </ControlTemplate>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Style>
                                                                                </Button.Style>
                                                                            </Button>
                                                                            <Button Content="删除"
                                                                                   Background="#DC3545"
                                                                                   Foreground="White"
                                                                                   BorderThickness="0"
                                                                                   Padding="12,6"
                                                                                   FontWeight="Bold"
                                                                                   Click="RemoveTtsConfig_Click"
                                                                                   Cursor="Hand">
                                                                                <Button.Style>
                                                                                    <Style TargetType="Button">
                                                                                        <Setter Property="Template">
                                                                                            <Setter.Value>
                                                                                                <ControlTemplate TargetType="Button">
                                                                                                    <Border Background="{TemplateBinding Background}"
                                                                                                           CornerRadius="6"
                                                                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                                                                           Padding="{TemplateBinding Padding}">
                                                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                                                         VerticalAlignment="Center"/>
                                                                                                    </Border>
                                                                                                    <ControlTemplate.Triggers>
                                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                                            <Setter Property="Background" Value="#C82333"/>
                                                                                                        </Trigger>
                                                                                                    </ControlTemplate.Triggers>
                                                                                                </ControlTemplate>
                                                                                            </Setter.Value>
                                                                                        </Setter>
                                                                                    </Style>
                                                                                </Button.Style>
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- 当没有配置时显示的提示 -->
                                            <Border x:Name="NoTtsConfigMessage"
                                                   Background="#F8F9FA" 
                                                   CornerRadius="8" 
                                                   Padding="30,20"
                                                   Margin="0,10"
                                                   BorderBrush="#DEE2E6"
                                                   BorderThickness="1"
                                                   Visibility="Visible">
                                                <StackPanel HorizontalAlignment="Center">
                                                    <TextBlock Text="🔊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                    <TextBlock Text="暂无TTS配置"
                                                              FontWeight="Bold"
                                                              FontSize="16"
                                                              Foreground="#6C757D"
                                                              HorizontalAlignment="Center"
                                                              Margin="0,0,0,5"/>
                                                    <TextBlock Text="点击右上角【添加TTS配置】按钮来添加第一个配置"
                                                              Foreground="#6C757D"
                                                              HorizontalAlignment="Center"
                                                              TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- 测试区域 -->
                                            <Border Background="White" 
                                                   CornerRadius="12" 
                                                   Margin="0,20,0,20" 
                                                   Padding="20"
                                                   BorderBrush="#E0E6ED"
                                                   BorderThickness="1">
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#40000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                                                </Border.Effect>
                                                
                                                <StackPanel>
                                                    <TextBlock Text="测试播放"
                                                              FontWeight="Bold"
                                                              FontSize="16"
                                                              Margin="0,0,0,15"
                                                              Foreground="#212529"/>
                                                    
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="100"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBox x:Name="TestTextBox"
                                                                Grid.Column="0"
                                                                Text="Hello, this is a test message for TTS."
                                                                Margin="0,0,10,0"
                                                                Background="#F8F9FA"
                                                                BorderBrush="#DEE2E6"
                                                                BorderThickness="1"
                                                                Padding="10,8"
                                                                VerticalAlignment="Center">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="TextBox">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                                                       CornerRadius="6"
                                                                                       Padding="{TemplateBinding Padding}">
                                                                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                        
                                                        <Button Grid.Column="1"
                                                               Content="测试播放"
                                                               Background="#17A2B8"
                                                               Foreground="White"
                                                               BorderThickness="0"
                                                               Padding="12,8"
                                                               FontWeight="Bold"
                                                               Click="TestTts_Click"
                                                               Cursor="Hand">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}"
                                                                                       CornerRadius="6"
                                                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                                                       Padding="{TemplateBinding Padding}">
                                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                                     VerticalAlignment="Center"/>
                                                                                </Border>
                                                                                <ControlTemplate.Triggers>
                                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                                        <Setter Property="Background" Value="#138496"/>
                                                                                    </Trigger>
                                                                                </ControlTemplate.Triggers>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </Border>
                    
                    <!-- 左边按钮 - 用于切换卡片 -->
                    <Button x:Name="LeftFlipButton"
                           Content="◀"
                           Width="35"
                           Height="35"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,235,75"
                           Background="#40FFFFFF"
                           Foreground="#666666"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="Bold"
                           Click="LeftFlipButton_Click"
                           Cursor="Hand"
                           ToolTip="上一张卡片 / 翻转卡片（当卡片已翻转时）">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#80FFFFFF"/>
                                        <Setter Property="Foreground" Value="#000000"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                        <Setter Property="Foreground" Value="#40666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- 右边按钮 - 用于切换卡片 -->
                    <Button x:Name="RightFlipButton"
                           Content="▶"
                           Width="35"
                           Height="35"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,5,75"
                           Background="#40FFFFFF"
                           Foreground="#666666"
                           BorderThickness="0"
                           FontSize="12"
                           FontWeight="Bold"
                           Click="RightFlipButton_Click"
                           Cursor="Hand"
                           ToolTip="下一张卡片 / 翻转卡片（当卡片已翻转时）">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#80FFFFFF"/>
                                        <Setter Property="Foreground" Value="#000000"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#20FFFFFF"/>
                                        <Setter Property="Foreground" Value="#40666666"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>