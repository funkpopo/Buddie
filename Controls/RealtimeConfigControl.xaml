<UserControl x:Class="Buddie.Controls.RealtimeConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie"
             xmlns:loc="clr-namespace:Buddie.Localization">
    
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Uid="Realtime_Header"
                       Text="{loc:Resx Realtime_Header}"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Grid.Column="1"
                    x:Uid="Realtime_AddConfigButton"
                    Content="{loc:Resx Realtime_AddConfig}"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontWeight="Bold"
                    Click="AddRealtimeConfig_Click"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
        
        <!-- 实时交互配置列表 -->
        <ItemsControl x:Name="RealtimeConfigList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="12"
                            Margin="0,8"
                            Padding="20"
                            BorderThickness="1"
                            Effect="{StaticResource CardShadow}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- 编辑模式和显示模式 -->
                        <Grid>
                            <!-- 编辑模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 渠道类型 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               x:Uid="Realtime_Edit_ChannelTypeLabel"
                                               Text="{loc:Resx Realtime_ChannelType_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ComboBox Grid.Row="0" Grid.Column="1"
                                              x:Name="ChannelTypeComboBox"
                                              SelectedValue="{Binding ChannelType, Mode=TwoWay}"
                                              DisplayMemberPath="Name"
                                              SelectedValuePath="ChannelType"
                                              Margin="0,0,10,8"
                                              Style="{StaticResource ModernComboBoxStyle}"
                                              Loaded="ChannelTypeComboBox_Loaded"
                                              SelectionChanged="ChannelTypeComboBox_SelectionChanged"/>

                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               x:Uid="Realtime_Edit_NameLabel"
                                               Text="{loc:Resx ApiConfig_ConfigName_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <!-- WebSocket URL -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               x:Uid="Realtime_Edit_WebSocketUrlLabel"
                                               Text="{loc:Resx Realtime_WebSocketUrl_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding RequiresBaseUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding BaseUrl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Visibility="{Binding RequiresBaseUrl, Converter={StaticResource BooleanToVisibilityConverter}}"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <!-- API Key -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               x:Uid="Realtime_Edit_ApiKeyLabel"
                                               Text="{loc:Resx Common_ApiKey_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <PasswordBox Grid.Row="3" Grid.Column="1"
                                                 x:Name="ApiKeyPasswordBox"
                                                 Margin="0,0,10,8"
                                                 Padding="8,6"
                                                 PasswordChanged="ApiKeyPasswordBox_PasswordChanged"
                                                 Style="{StaticResource ModernPasswordBoxStyle}"/>

                                    <!-- 模型 -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               x:Uid="Realtime_Edit_ModelLabel"
                                               Text="{loc:Resx TtsConfig_Model}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- 对于QwenOmni显示模型选择下拉菜单 -->
                                    <ComboBox Grid.Row="4" Grid.Column="1"
                                              x:Name="QwenModelComboBox"
                                              SelectedItem="{Binding Model, Mode=TwoWay}"
                                              ItemsSource="{Binding SupportedModels}"
                                              Margin="0,0,10,8"
                                              SelectionChanged="ModelComboBox_SelectionChanged">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChannelType}" Value="QwenOmni">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>
                                    
                                    <!-- 对于Custom显示可编辑下拉菜单 -->
                                    <ComboBox Grid.Row="4" Grid.Column="1"
                                              x:Name="ModelComboBox"
                                              Text="{Binding Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsEditable="True"
                                              ItemsSource="{Binding SupportedModels}"
                                              Margin="0,0,10,8"
                                              SelectionChanged="ModelComboBox_SelectionChanged">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBoxStyle}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ChannelType}" Value="Custom">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                    </ComboBox>

                                    <!-- VAD模式 -->
                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               x:Uid="Realtime_Edit_VadModeLabel"
                                               Text="{loc:Resx Realtime_VadMode_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ComboBox Grid.Row="5" Grid.Column="1"
                                              x:Name="VadModeComboBox"
                                              SelectedValue="{Binding VadMode, Mode=TwoWay}"
                                              Margin="0,0,10,8"
                                              Style="{StaticResource ModernComboBoxStyle}"
                                              Loaded="VadModeComboBox_Loaded">
                                    </ComboBox>

                                    <!-- 音频配置 -->
                                    <TextBlock Grid.Row="6" Grid.Column="0"
                                               x:Uid="Realtime_Edit_SampleRateLabel"
                                               Text="{loc:Resx RealtimeConfig_SampleRate}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="6" Grid.Column="1"
                                             Text="{Binding SampleRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                               x:Uid="Realtime_Edit_BlockSizeLabel"
                                               Text="{loc:Resx Realtime_BlockSize_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="7" Grid.Column="1"
                                             Text="{Binding ChunkSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <!-- VAD 参数 -->
                                    <TextBlock Grid.Row="8" Grid.Column="0"
                                               x:Uid="Realtime_Edit_VadThresholdLabel"
                                               Text="{loc:Resx Realtime_VadThreshold_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="8" Grid.Column="1"
                                             Text="{Binding VadThreshold, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <TextBlock Grid.Row="9" Grid.Column="0"
                                               x:Uid="Realtime_Edit_MinSpeechFramesLabel"
                                               Text="{loc:Resx Realtime_MinSpeechFrames_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="9" Grid.Column="1"
                                             Text="{Binding VadMinSpeechFrames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <TextBlock Grid.Row="10" Grid.Column="0"
                                               x:Uid="Realtime_Edit_MinSilenceFramesLabel"
                                               Text="{loc:Resx Realtime_MinSilenceFrames_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="10" Grid.Column="1"
                                             Text="{Binding VadMinSilenceFrames, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             Margin="0,0,10,8"
                                             Padding="8,6"
                                             Style="{StaticResource ModernTextBoxStyle}"/>

                                    <!-- 按钮区域 -->
                                    <StackPanel Grid.Row="11" Grid.Column="1"
                                                 Orientation="Horizontal"
                                                 HorizontalAlignment="Right"
                                                 Margin="0,15,0,0">
                                        <Button x:Uid="Realtime_Edit_TestConnButton"
                                                Content="{loc:Resx Button_TestConnection}"
                                                Background="#007BFF"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Margin="0,0,10,0"
                                                Click="TestRealtimeConnection_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button x:Uid="Realtime_Edit_SaveButton"
                                                Content="{loc:Resx Button_Save}"
                                                Background="#28A745"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Margin="0,0,10,0"
                                                Click="SaveRealtimeConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button x:Uid="Realtime_Edit_CancelButton"
                                                Content="{loc:Resx Button_Cancel}"
                                                Background="#6C757D"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Click="CancelRealtimeConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 显示模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="Bold"
                                                   FontSize="14"
                                                   Margin="0,0,0,5">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock FontSize="12" Margin="0,0,0,2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx TtsConfig_Model}"/><Run Text=": "/><Run Text="{Binding Model}"/>
                                        </TextBlock>
                                        <TextBlock FontSize="12">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="VAD: "/><Run Text="{Binding VadMode}"/>
                                            <Run Text="{loc:Resx RealtimeConfig_SampleRate}"/><Run Text=": "/><Run Text="{Binding SampleRate}"/>Hz
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="{Binding IsActive, Converter={StaticResource BoolToActiveTextConverter}}"
                                                Background="{Binding IsActive, Converter={StaticResource BoolToActiveBrushConverter}}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Margin="0,0,8,0"
                                                Click="ToggleRealtimeActive_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button x:Uid="Realtime_View_EditButton"
                                                Content="{loc:Resx Button_Edit}"
                                                Background="#FFC107"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Margin="0,0,8,0"
                                                Click="EditRealtimeConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button x:Uid="Realtime_View_DeleteButton"
                                                Content="{loc:Resx Button_Delete}"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="10,5"
                                                Click="DeleteRealtimeConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
