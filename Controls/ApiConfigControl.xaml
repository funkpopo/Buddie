<UserControl x:Class="Buddie.Controls.ApiConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie"
             xmlns:loc="clr-namespace:Buddie.Localization">
    
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Uid="Api_Header"
                       Text="{loc:Resx API_Header}"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Grid.Column="1"
                    x:Uid="Api_AddConfigButton"
                    Content="{loc:Resx API_AddConfig}"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    Margin="0,0,10,0"
                    FontWeight="Bold"
                    Click="AddApiConfig_Click"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
            <Button Grid.Column="2"
                    x:Uid="Api_TestAllButton"
                    Content="{loc:Resx API_TestAll}"
                    Background="#17A2B8"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontWeight="Bold"
                    Click="TestAllApiConfigs_Click"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
        
        <!-- API配置列表 -->
        <ItemsControl x:Name="ApiConfigList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="12"
                            Margin="0,8"
                            Padding="20"
                            BorderThickness="1"
                            Effect="{StaticResource CardShadow}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- 编辑模式和显示模式 -->
                        <Grid>
                            <!-- 编辑模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               x:Uid="Api_Edit_NameLabel"
                                               Text="{loc:Resx ApiConfig_ConfigName_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding Name, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- 预设渠道选择 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               x:Uid="Api_Edit_PresetChannelLabel"
                                               Text="{loc:Resx ApiConfig_PresetChannel_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ComboBox Grid.Row="1" Grid.Column="1"
                                              x:Name="ChannelTypeComboBox"
                                              Margin="0,0,10,8"
                                              Padding="10,8"
                                              SelectionChanged="ChannelTypeComboBox_SelectionChanged"
                                              Loaded="ChannelTypeComboBox_Loaded">
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="BorderBrush" Value="#CED4DA"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <Border Name="Border" 
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                                        CornerRadius="8"/>
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="30"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <ContentPresenter Name="ContentSite"
                                                                                      Grid.Column="0"
                                                                                      IsHitTestVisible="False"
                                                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                      Margin="10,8,5,8"
                                                                                      VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Left"/>
                                                                    
                                                                    <ToggleButton Name="ToggleButton" 
                                                                                  Grid.Column="1"
                                                                                  Focusable="false" 
                                                                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                                                                  ClickMode="Press"
                                                                                  Background="Transparent"
                                                                                  BorderThickness="0">
                                                                        <Path Name="Arrow"
                                                                              Fill="{TemplateBinding Foreground}"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"
                                                                              Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                                    </ToggleButton>
                                                                </Grid>
                                                                
                                                                <Popup Name="Popup"
                                                                       Placement="Bottom"
                                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True"
                                                                       Focusable="False"
                                                                       PopupAnimation="Slide">
                                                                    <Border Name="DropDownBorder"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="1"
                                                                            CornerRadius="8"
                                                                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                            MinWidth="{TemplateBinding ActualWidth}">
                                                                        <ScrollViewer Style="{StaticResource ModernScrollViewerStyle}">
                                                                            <StackPanel IsItemsHost="True"/>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Popup>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Background" Value="#2D2D30"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Padding" Value="10,8"/>
                                                <Setter Property="MinHeight" Value="32"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBoxItem">
                                                            <Border Name="ItemBorder"
                                                                    Background="{TemplateBinding Background}"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter 
                                                                    VerticalAlignment="Center"
                                                                    HorizontalAlignment="Left"
                                                                    TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsHighlighted" Value="True">
                                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD"/>
                                                                </Trigger>
                                                                <Trigger Property="IsSelected" Value="True">
                                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#BBDEFB"/>
                                                                </Trigger>
                                                                <!-- 深色主题适配 -->
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                        <Condition Binding="{Binding IsHighlighted, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#404040"/>
                                                                </MultiDataTrigger>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                        <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#555555"/>
                                                                </MultiDataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>
                                    
                                    <!-- API URL -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               x:Uid="Api_Edit_ApiUrlLabel"
                                               Text="{loc:Resx Common_ApiUrl_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding ApiUrl, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- API Key -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               x:Uid="Api_Edit_ApiKeyLabel"
                                               Text="{loc:Resx Common_ApiKey_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="3" Grid.Column="1"
                                             x:Name="ApiKeyTextBox"
                                             Text="{Binding ApiKey, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- Model Name -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               x:Uid="Api_Edit_ModelNameLabel"
                                               Text="{loc:Resx Common_ModelName_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Text="{Binding ModelName, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- 开关设置 -->
                                    <StackPanel Grid.Row="5" Grid.Column="1"
                                                Orientation="Vertical"
                                                Margin="0,10,10,15">
                                        <CheckBox x:Uid="Api_Edit_EnableStreaming"
                                                  Content="{loc:Resx ApiConfig_EnableStreaming}"
                                                  IsChecked="{Binding IsStreamingEnabled, Mode=TwoWay}"
                                                  Margin="0,0,0,12"
                                                  Style="{StaticResource ToggleSwitchStyle}"/>
                                        <CheckBox x:Uid="Api_Edit_EnableMultimodal"
                                                  Content="{loc:Resx ApiConfig_EnableMultimodal}"
                                                  IsChecked="{Binding IsMultimodalEnabled, Mode=TwoWay}"
                                                  Margin="0,0,0,12"
                                                  Style="{StaticResource ToggleSwitchStyle}"/>
                                        <CheckBox x:Uid="Api_Edit_SupportsThinking"
                                                  Content="{loc:Resx ApiConfig_SupportsThinking}"
                                                  IsChecked="{Binding SupportsThinking, Mode=TwoWay}"
                                                  Style="{StaticResource ToggleSwitchStyle}"/>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="6" Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,10,10,0">
                                        <Button x:Uid="Api_Edit_SaveButton"
                                                Content="{loc:Resx Button_Save}"
                                                Background="#007BFF"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                Margin="0,0,10,0"
                                                FontWeight="Bold"
                                                Click="SaveApiConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button x:Uid="Api_Edit_CancelButton"
                                                Content="{loc:Resx Button_Cancel}"
                                                Background="#6C757D"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                FontWeight="Bold"
                                                Click="CancelApiConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 显示模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#212529"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- API URL -->
                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx ApiConfig_ChannelType}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ChannelType, Converter={StaticResource ChannelTypeToNameConverter}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- API URL -->
                                    <StackPanel Grid.Row="2" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock x:Uid="Api_View_ApiUrlLabel"
                                                   Text="{loc:Resx Common_ApiUrl_Label}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,4,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ApiUrl}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 模型名称 -->
                                    <StackPanel Grid.Row="3" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx ApiConfig_Model}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ModelName}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 多模态状态 -->
                                    <StackPanel Grid.Row="4" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx ApiConfig_Multimodal}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding IsMultimodalEnabled, Converter={StaticResource BooleanToYesNoConverter}}"
                                                   Foreground="{Binding IsMultimodalEnabled, Converter={StaticResource BooleanToColorConverter}}"
                                                   Margin="0,0,15,0"/>
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx ApiConfig_ReasoningMode}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding SupportsThinking, Converter={StaticResource BooleanToYesNoConverter}}"
                                                   Foreground="{Binding SupportsThinking, Converter={StaticResource BooleanToColorConverter}}"/>
                                    </StackPanel>
                                    
                                    <!-- 测试状态 -->
                                    <StackPanel Grid.Row="6" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx ApiConfig_TestStatus}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <Border CornerRadius="3"
                                                Padding="6,2"
                                                Margin="5,0,0,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TestStatus}" Value="NotTested">
                                                            <Setter Property="Background" Value="#E9ECEF"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TestStatus}" Value="Testing">
                                                            <Setter Property="Background" Value="#FFF3CD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TestStatus}" Value="Success">
                                                            <Setter Property="Background" Value="#D1EDD8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TestStatus}" Value="Failed">
                                                            <Setter Property="Background" Value="#F8D7DA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TestStatus}" Value="NotTested">
                                                                    <Setter Property="Text" Value="未测试"/>
                                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TestStatus}" Value="Testing">
                                                                    <Setter Property="Text" Value="测试中..."/>
                                                                    <Setter Property="Foreground" Value="#856404"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TestStatus}" Value="Success">
                                                                    <Setter Property="Text" Value="✓ 成功"/>
                                                                    <Setter Property="Foreground" Value="#155724"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding TestStatus}" Value="Failed">
                                                                    <Setter Property="Text" Value="✗ 失败"/>
                                                                    <Setter Property="Foreground" Value="#721C24"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding TestMessage}"
                                                           Margin="5,0,0,0"
                                                           FontSize="11">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#495057"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#CCCCCC"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Grid.RowSpan="6"
                                                VerticalAlignment="Center">
                                        <!-- 第一行：测试和编辑按钮 -->
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,0,0,8">
                                            <Button x:Uid="Api_View_TestButton"
                                                    Content="{loc:Resx Button_Test}"
                                                    Background="#28A745"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="12,6"
                                                    Margin="0,0,8,0"
                                                    FontWeight="Bold"
                                                    Click="TestApiConfig_Click"
                                                    Cursor="Hand"
                                                    Style="{StaticResource RoundedButtonStyle}"/>
                                            <Button x:Uid="Api_View_EditButton"
                                                    Content="{loc:Resx Button_Edit}"
                                                    Background="#FFC107"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="12,6"
                                                    FontWeight="Bold"
                                                    Click="EditApiConfig_Click"
                                                    Cursor="Hand"
                                                    Style="{StaticResource RoundedButtonStyle}"/>
                                        </StackPanel>
                                        <!-- 第二行：删除按钮 -->
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Button x:Uid="Api_View_DeleteButton"
                                                    Content="{loc:Resx Button_Delete}"
                                                    Background="#DC3545"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="12,6"
                                                    FontWeight="Bold"
                                                    Click="RemoveApiConfig_Click"
                                                    Cursor="Hand"
                                                    Style="{StaticResource RoundedButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- 当没有配置时显示的提示 -->
        <Border x:Name="NoConfigMessage"
                CornerRadius="8"
                Padding="30,20"
                Margin="0,10"
                BorderThickness="1"
                Visibility="Visible">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#DEE2E6"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🔧"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Uid="Api_EmptyState_Title"
                           Text="{loc:Resx ApiConfig_Empty_Title}"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock x:Uid="Api_EmptyState_Hint"
                           Text="{loc:Resx ApiConfig_Empty_Hint}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
