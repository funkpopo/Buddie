<UserControl x:Class="Buddie.Controls.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie.Controls">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <!-- å¯¹è¯ç•Œé¢ - ä½äºŽå³ä¸‹è§’CardContaineré™„è¿‘ -->
    <Border x:Name="DialogInterface"
            Width="460"
            Height="700"
            CornerRadius="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,38,160"
            Effect="{StaticResource CardShadow}"
            Visibility="Collapsed">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                        <Setter Property="Background" Value="#1E1E1E"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- å¯¹è¯åŽ†å²ä¾§è¾¹æ  -->
            <Border x:Name="HistorySidebar"
                    Grid.Column="0"
                    CornerRadius="10,0,0,10"
                    BorderThickness="0,0,1,0"
                    Visibility="Collapsed">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="BorderBrush" Value="#E0E6ED"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- ä¾§è¾¹æ æ ‡é¢˜ -->
                    <TextBlock Grid.Row="0"
                               Text="å¯¹è¯åŽ†å²"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- æ–°å»ºå¯¹è¯æŒ‰é’® -->
                    <Button Grid.Row="1"
                            x:Name="NewConversationButton"
                            Content="+ æ–°å»ºå¯¹è¯"
                            Margin="8,4"
                            Padding="8,4"
                            Background="#007BFF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="11"
                            Click="NewConversationButton_Click"
                            Style="{StaticResource RoundedButtonStyle}"/>
                    
                    <!-- å¯¹è¯åˆ—è¡¨ -->
                    <ScrollViewer Grid.Row="2"
                                  Margin="4,0,4,4"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ConversationsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ConversationItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Background" Value="#2D2D30"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#3F3F46"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#333333"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding UpdatedAt, StringFormat={}{0:MM/dd HH:mm}}"
                                                           FontSize="9"
                                                           Opacity="0.7">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Content="ðŸ—‘"
                                                    Width="16"
                                                    Height="16"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="10"
                                                    Cursor="Hand"
                                                    Opacity="0.5"
                                                    ToolTip="åˆ é™¤å¯¹è¯"
                                                    Click="DeleteConversationButton_Click"
                                                    Tag="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- ä¸»å¯¹è¯åŒºåŸŸ -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <!-- å¯¹è¯ç•Œé¢æ ‡é¢˜æ  -->
                <Border Grid.Row="0"
                        CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">
                            <Button x:Name="SidebarButton"
                                    Content="â˜°"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Click="SidebarButton_Click"
                                    Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#666666"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <TextBlock Text="å¯¹è¯"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="Ã—"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseButton_Click"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- å¯¹è¯æ¶ˆæ¯åŒºåŸŸ -->
                <ScrollViewer x:Name="DialogScrollViewer"
                              Grid.Row="1"
                              Margin="10"
                              VerticalScrollBarVisibility="Auto"
                              Background="Transparent">
                    <StackPanel x:Name="DialogMessagesPanel"
                                Orientation="Vertical"
                                Margin="5"/>
                </ScrollViewer>
                
                <!-- è¾“å…¥åŒºåŸŸ -->
                <Grid Grid.Row="2"
                      Margin="10,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- æˆªå›¾é¢„è§ˆåŒºåŸŸ -->
                    <Border x:Name="ScreenshotPreviewBorder" 
                            Grid.Row="0" 
                            Visibility="Collapsed"
                            Margin="0,0,0,5"
                            Background="Transparent">
                        <Grid>
                            <Image x:Name="ScreenshotPreview"
                                   MaxHeight="150"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Stretch="Uniform"
                                   Margin="5"/>
                            <Button x:Name="RemoveScreenshotButton"
                                    Content="Ã—"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Width="20"
                                    Height="20"
                                    Margin="0,5,5,0"
                                    Background="#FF4444"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Click="RemoveScreenshotButton_Click"
                                    Style="{StaticResource RoundedButtonStyle}"
                                    ToolTip="åˆ é™¤æˆªå›¾"/>
                        </Grid>
                    </Border>

                    <!-- è¾“å…¥å’ŒæŒ‰é’®åŒºåŸŸ -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="0,0,5,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#F8F8F8"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#1E1E1E"/>
                                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBox x:Name="DialogInput"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12,8"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLines="4"
                                     MinHeight="36"
                                     MaxHeight="100"
                                     VerticalAlignment="Center"
                                     FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="CaretBrush" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="CaretBrush" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                        
                        <!-- æˆªå›¾æŒ‰é’® -->
                        <Button x:Name="ScreenshotButton"
                                Grid.Column="1"
                                Content="ðŸ“·"
                                Width="40"
                                Height="40"
                                BorderThickness="0"
                                Click="ScreenshotButton_Click"
                                Cursor="Hand"
                                FontSize="16"
                                Margin="0,0,5,0"
                                ToolTip="æˆªå›¾">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#28A745"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#198754"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#218838"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1e7e34"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="SendButton"
                                Grid.Column="2"
                                Content="å‘é€"
                                BorderThickness="0"
                                Click="SendMessage_Click"
                                Cursor="Hand"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="40">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#0078D4"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9B"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#004578"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>