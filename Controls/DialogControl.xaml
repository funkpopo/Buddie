<UserControl x:Class="Buddie.Controls.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie.Controls"
             xmlns:buddie="clr-namespace:Buddie"
             xmlns:loc="clr-namespace:Buddie.Localization">
    
    
    <!-- å¯¹è¯ç•Œé¢ - ä½äºŽå³ä¸‹è§’CardContaineré™„è¿‘ -->
    <Border x:Name="DialogInterface"
            Width="460"
            Height="700"
            CornerRadius="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,38,160"
            Effect="{StaticResource CardShadow}"
            Visibility="Collapsed">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                        <Setter Property="Background" Value="#1E1E1E"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- å¯¹è¯åŽ†å²ä¾§è¾¹æ  -->
            <Border x:Name="HistorySidebar"
                    Grid.Column="0"
                    CornerRadius="10,0,0,10"
                    BorderThickness="0,0,1,0"
                    Visibility="Collapsed">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="BorderBrush" Value="#E0E6ED"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- ä¾§è¾¹æ æ ‡é¢˜ -->
                    <TextBlock Grid.Row="0"
                               Text="{loc:Resx Dialog_HistoryTitle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- æ–°å»ºå¯¹è¯æŒ‰é’® -->
                    <Button Grid.Row="1"
                            x:Name="NewConversationButton"
                            Content="{loc:Resx Dialog_NewConversation}"
                            Margin="8,4"
                            Padding="8,4"
                            Background="#007BFF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="11"
                            Command="{Binding NewConversationCommand}"
                            Style="{StaticResource RoundedButtonStyle}"/>
                    
                    <!-- å¯¹è¯åˆ—è¡¨ -->
                    <ScrollViewer Grid.Row="2"
                                  Margin="4,0,4,4"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{StaticResource ModernScrollViewerStyle}"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ConversationsList"
                                      ItemsSource="{Binding Conversations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ConversationItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Background" Value="#2D2D30"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#3F3F46"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#333333"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding UpdatedAt, StringFormat={}{0:MM/dd HH:mm}}"
                                                           FontSize="9"
                                                           Opacity="0.7">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Content="ðŸ—‘"
                                                    Width="16"
                                                    Height="16"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="10"
                                                    Cursor="Hand"
                                                    Opacity="0.5"
                                                    ToolTip="åˆ é™¤å¯¹è¯"
                                                    Command="{Binding DataContext.DeleteConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- ä¸»å¯¹è¯åŒºåŸŸ -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- å¯¹è¯ç•Œé¢æ ‡é¢˜æ  -->
                <Border Grid.Row="0"
                        CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">
                    <Button x:Name="SidebarButton"
                            Content="â˜°"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Command="{Binding ToggleSidebarCommand}"
                                    Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#666666"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <TextBlock Text="{loc:Resx Dialog_Title}"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="Ã—"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Command="{Binding CloseCommand}"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- å¯¹è¯æ¶ˆæ¯åŒºåŸŸï¼ˆå¯ç”¨è™šæ‹ŸåŒ–ï¼‰ -->
                <ListBox x:Name="DialogMessagesList"
                         Grid.Row="1"
                         Margin="10"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemsSource="{Binding Messages}"
                         ScrollViewer.CanContentScroll="True"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Stretch">
                                <!-- Message with reasoning -->
                                <StackPanel x:Name="MessageContainer">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasReasoning}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        
                                        <!-- Reasoning content container -->
                                        <StackPanel MaxWidth="350">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Style.Triggers>
                                                        <!-- ç”¨æˆ·æ¶ˆæ¯çš„æŽ¨ç†å†…å®¹é å³æ˜¾ç¤º -->
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Margin" Value="50,5,10,5"/>
                                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <!-- æ€ç»´è¿‡ç¨‹å±•å¼€å™¨ -->
                                            <Expander Header="{loc:Resx Label_Reasoning}"
                                                     IsExpanded="False"
                                                     Margin="0,0,0,5">
                                                <Expander.Style>
                                                    <Style TargetType="Expander">
                                                        <Setter Property="Foreground" Value="DarkGray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Expander.Style>
                                                <Border CornerRadius="12"
                                                       Padding="8">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#FFFDEB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding ReasoningContent}"
                                                              TextWrapping="Wrap"
                                                              FontSize="11"
                                                              LineHeight="16">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#65676B"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </Expander>
                                            <!-- æ¶ˆæ¯å†…å®¹ -->
                                            <ContentControl Content="{Binding}"
                                                           ContentTemplate="{StaticResource MessageBubbleTemplate}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Message without reasoning -->
                                    <ContentControl x:Name="SimpleMessage"
                                                   Content="{Binding}"
                                                   ContentTemplate="{StaticResource MessageBubbleTemplate}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasReasoning}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </Grid>
                            </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- è¾“å…¥åŒºåŸŸ -->
                <Grid Grid.Row="2"
                      Margin="10,5,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- æˆªå›¾é¢„è§ˆåŒºåŸŸ -->
                    <Border x:Name="ScreenshotPreviewContainer" 
                            Grid.Row="0"
                            Visibility="Collapsed"
                            Margin="0,0,0,8"
                            CornerRadius="8"
                            BorderThickness="1"
                            MaxHeight="100">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#F8F8F8"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                        <Setter Property="BorderBrush" Value="#444444"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- æˆªå›¾ç¼©ç•¥å›¾ -->
                            <Border Grid.Column="0" 
                                    Margin="8"
                                    CornerRadius="4"
                                    BorderThickness="1"
                                    MaxWidth="120">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="BorderBrush" Value="#555555"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Image x:Name="ScreenshotThumbnail"
                                       MaxHeight="60"
                                       Stretch="Uniform"
                                       Cursor="Hand"
                                       ToolTip="ç‚¹å‡»æŸ¥çœ‹å¤§å›¾">
                                    <Image.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding DataContext.OpenScreenshotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </Image.InputBindings>
                                </Image>
                            </Border>
                            
                            <!-- æ–‡ä»¶ä¿¡æ¯ -->
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        Margin="5,0">
                                <TextBlock Text="{loc:Resx Label_AddedScreenshot}"
                                           FontSize="12"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#333333"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock x:Name="ScreenshotInfo"
                                           Text="{loc:Resx Label_ClickImagePreview}"
                                           FontSize="10"
                                           Opacity="0.7">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#666666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            
                            <!-- åˆ é™¤æŒ‰é’® -->
                            <Button Grid.Column="2"
                                    x:Name="RemoveScreenshotBtn"
                                    Content="Ã—"
                                    Width="20"
                                    Height="20"
                                    Margin="8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Command="{Binding DataContext.RemoveScreenshotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    ToolTip="{loc:Resx Tooltip_RemoveScreenshot}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#999999"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#FF4444"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- è¾“å…¥å’ŒæŒ‰é’®åŒºåŸŸ -->
                    <Grid Grid.Row="1" MinHeight="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="0,0,5,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#F8F8F8"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#1E1E1E"/>
                                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBox x:Name="DialogInput"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12,8"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLines="4"
                                     MinHeight="36"
                                     MaxHeight="100"
                                     VerticalAlignment="Center"
                                     FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="CaretBrush" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="CaretBrush" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                        
                        <!-- å›¾ç‰‡ä¸Šä¼ æŒ‰é’® -->
                        <Button x:Name="ImageUploadButton"
                                Grid.Column="1"
                                Content="ðŸ–¼ï¸"
                                Width="40"
                                Height="40"
                                BorderThickness="0"
                                Command="{Binding ImageUploadCommand}"
                                Cursor="Hand"
                                FontSize="16"
                                Margin="0,0,5,0"
                                ToolTip="{loc:Resx Tooltip_UploadImage}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#5B9BD5"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4A89CC"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#3A79BC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- æˆªå›¾æŒ‰é’® -->
                        <Button x:Name="ScreenshotButton"
                                Grid.Column="2"
                                Content="ðŸ“·"
                                Width="40"
                                Height="40"
                                BorderThickness="0"
                                Command="{Binding ScreenshotCommand}"
                                Cursor="Hand"
                                FontSize="16"
                                Margin="0,0,5,0"
                                ToolTip="{loc:Resx Tooltip_Screenshot}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#28A745"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#198754"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#218838"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1e7e34"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="SendButton"
                                Grid.Column="3"
                                Content="{loc:Resx Dialog_Send}"
                                BorderThickness="0"
                                Command="{Binding SendMessageCommand}"
                                CommandParameter="{Binding ElementName=DialogInput, Path=Text}"
                                Cursor="Hand"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="40">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#0078D4"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9B"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#004578"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
