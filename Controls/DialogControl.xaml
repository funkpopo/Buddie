<UserControl x:Class="Buddie.Controls.DialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie.Controls"
             xmlns:buddie="clr-namespace:Buddie">
    
    <UserControl.Resources>
        <!-- 消息气泡数据模板 -->
        <DataTemplate x:Key="MessageBubbleTemplate">
                <Border x:Name="MessageBubble"
                        CornerRadius="18"
                        Effect="{StaticResource CardShadow}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Margin" Value="10,5,50,5"/>
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Style.Triggers>
                                <!-- 用户消息样式 -->
                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                    <Setter Property="Background" Value="#0084FF"/>
                                    <Setter Property="Margin" Value="50,5,10,5"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </DataTrigger>
                                <!-- 深色主题下的AI消息 -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsUser}" Value="False"/>
                                        <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="#3A3A3C"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 图片内容区域 -->
                        <Border Grid.Row="0"
                               CornerRadius="8"
                               Margin="8,8,8,4"
                               BorderThickness="1"
                               MaxWidth="250">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasImage}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                            <Setter Property="BorderBrush" Value="#555555"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Image x:Name="MessageImage"
                                   MaxHeight="200"
                                   Stretch="Uniform"
                                   ToolTip="图片内容">
                                <Image.Source>
                                    <Binding Path="ImageData">
                                        <Binding.Converter>
                                            <buddie:ImageConverter/>
                                        </Binding.Converter>
                                    </Binding>
                                </Image.Source>
                            </Image>
                        </Border>
                        
                        <!-- 消息内容 - 根据是否为Markdown内容选择显示控件 -->
                        <!-- TextBlock for non-Markdown content -->
                        <TextBlock Grid.Row="1"
                                   Text="{Binding Content}"
                                   Padding="12,8,12,8"
                                   TextWrapping="Wrap"
                                   MaxWidth="300"
                                   FontSize="13"
                                   LineHeight="18">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <!-- 隐藏TextBlock当内容为Markdown时 -->
                                        <DataTrigger Binding="{Binding IsMarkdownContent}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <!-- 用户消息文字 -->
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                        <!-- 深色主题下的AI消息文字 -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsUser}" Value="False"/>
                                                <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Foreground" Value="White"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- RichTextBox for Markdown content -->
                        <RichTextBox Grid.Row="1"
                                     local:DialogControl.BindableDocument="{Binding RenderedDocument}"
                                     Padding="12,8,12,8"
                                     MaxWidth="300"
                                     FontSize="13"
                                     IsReadOnly="True"
                                     BorderThickness="0"
                                     VerticalScrollBarVisibility="Disabled"
                                     HorizontalScrollBarVisibility="Disabled">
                            <RichTextBox.Style>
                                <Style TargetType="RichTextBox">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- 显示RichTextBox当内容为Markdown时 -->
                                        <DataTrigger Binding="{Binding IsMarkdownContent}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <!-- 用户消息文字 -->
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                        <!-- 深色主题下的AI消息文字 -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsUser}" Value="False"/>
                                                <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Foreground" Value="White"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </RichTextBox.Style>
                        </RichTextBox>
                        
                        <!-- 用户消息按钮区域 -->
                        <StackPanel Grid.Row="2"
                                   Orientation="Horizontal"
                                   HorizontalAlignment="Left"
                                   Margin="8,0,0,5">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <!-- 复制按钮 -->
                            <Button Content="📋"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    ToolTip="复制"
                                    Command="{Binding DataContext.CopyMessageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Content}"/>
                        </StackPanel>
                        
                        <!-- AI消息按钮区域 -->
                        <StackPanel Grid.Row="2"
                                   Orientation="Horizontal"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,8,5">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <!-- 只有AI消息且有TTS配置时显示 -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsUser}" Value="False"/>
                                                <Condition Binding="{Binding DataContext.HasActiveTtsConfiguration, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <!-- 复制按钮 -->
                            <Button Content="📋"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    ToolTip="复制"
                                    Command="{Binding DataContext.CopyMessageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Content}"/>
                            <!-- TTS按钮 -->
                            <Button Content="🔊"
                                    Width="24"
                                    Height="24"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Margin="5,0,0,0"
                                    Cursor="Hand"
                                    ToolTip="朗读"
                                    Command="{Binding DataContext.PlayTtsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Content}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </DataTemplate>
    </UserControl.Resources>
    
    <!-- 对话界面 - 位于右下角CardContainer附近 -->
    <Border x:Name="DialogInterface"
            Width="460"
            Height="700"
            CornerRadius="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,38,160"
            Effect="{StaticResource CardShadow}"
            Visibility="Collapsed">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                        <Setter Property="Background" Value="#1E1E1E"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 对话历史侧边栏 -->
            <Border x:Name="HistorySidebar"
                    Grid.Column="0"
                    CornerRadius="10,0,0,10"
                    BorderThickness="0,0,1,0"
                    Visibility="Collapsed">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#F8F9FA"/>
                        <Setter Property="BorderBrush" Value="#E0E6ED"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                <Setter Property="Background" Value="#252526"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 侧边栏标题 -->
                    <TextBlock Grid.Row="0"
                               Text="对话历史"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    
                    <!-- 新建对话按钮 -->
                    <Button Grid.Row="1"
                            x:Name="NewConversationButton"
                            Content="+ 新建对话"
                            Margin="8,4"
                            Padding="8,4"
                            Background="#007BFF"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="11"
                            Command="{Binding NewConversationCommand}"
                            Style="{StaticResource RoundedButtonStyle}"/>
                    
                    <!-- 对话列表 -->
                    <ScrollViewer Grid.Row="2"
                                  Margin="4,0,4,4"
                                  VerticalScrollBarVisibility="Auto"
                                  Style="{StaticResource ModernScrollViewerStyle}"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="ConversationsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="8,6"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ConversationItem_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#E3F2FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Background" Value="#2D2D30"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Background" Value="#3F3F46"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#333333"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding UpdatedAt, StringFormat={}{0:MM/dd HH:mm}}"
                                                           FontSize="9"
                                                           Opacity="0.7">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#666666"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Content="🗑"
                                                    Width="16"
                                                    Height="16"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    FontSize="10"
                                                    Cursor="Hand"
                                                    Opacity="0.5"
                                                    ToolTip="删除对话"
                                                    Command="{Binding DataContext.DeleteConversationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding Id}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- 主对话区域 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 对话界面标题栏 -->
                <Border Grid.Row="0"
                        CornerRadius="10,10,0,0"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0">
                    <Button x:Name="SidebarButton"
                            Content="☰"
                                    Width="20"
                                    Height="20"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Command="{Binding ToggleSidebarCommand}"
                                    Margin="0,0,10,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#666666"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <TextBlock Text="对话"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="×"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="20"
                                Height="20"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Command="{Binding CloseCommand}"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- 对话消息区域 -->
                <ScrollViewer x:Name="DialogScrollViewer"
                              Grid.Row="1"
                              Margin="10"
                              Style="{StaticResource ModernScrollViewerStyle}"
                              VerticalScrollBarVisibility="Auto"
                              Background="Transparent">
                    <ItemsControl x:Name="DialogMessagesPanel"
                                  Margin="5"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  VirtualizingPanel.IsContainerVirtualizable="True"
                                  ScrollViewer.CanContentScroll="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Stretch"
                                      Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                    <!-- Message with reasoning -->
                                    <StackPanel x:Name="MessageContainer">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasReasoning}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        
                                        <!-- Reasoning content container -->
                                        <StackPanel MaxWidth="350">
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Setter Property="Margin" Value="10,5,50,5"/>
                                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                                    <Style.Triggers>
                                                        <!-- 用户消息的推理内容靠右显示 -->
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Margin" Value="50,5,10,5"/>
                                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <!-- 思维过程展开器 -->
                                            <Expander Header="💭 思维过程"
                                                     IsExpanded="False"
                                                     Margin="0,0,0,5">
                                                <Expander.Style>
                                                    <Style TargetType="Expander">
                                                        <Setter Property="Foreground" Value="DarkGray"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                <Setter Property="Foreground" Value="LightGray"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Expander.Style>
                                                <Border CornerRadius="12"
                                                       Padding="8">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#FFFDEB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter Property="Background" Value="#2D2D30"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding ReasoningContent}"
                                                              TextWrapping="Wrap"
                                                              FontSize="11"
                                                              LineHeight="16">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#65676B"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </Expander>
                                            <!-- 消息内容 -->
                                            <ContentControl Content="{Binding}"
                                                           ContentTemplate="{StaticResource MessageBubbleTemplate}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Message without reasoning -->
                                    <ContentControl x:Name="SimpleMessage"
                                                   Content="{Binding}"
                                                   ContentTemplate="{StaticResource MessageBubbleTemplate}">
                                        <ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasReasoning}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- 输入区域 -->
                <Grid Grid.Row="2"
                      Margin="10,5,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- 截图预览区域 -->
                    <Border x:Name="ScreenshotPreviewContainer" 
                            Grid.Row="0"
                            Visibility="Collapsed"
                            Margin="0,0,0,8"
                            CornerRadius="8"
                            BorderThickness="1"
                            MaxHeight="100">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#F8F8F8"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                        <Setter Property="Background" Value="#2A2A2A"/>
                                        <Setter Property="BorderBrush" Value="#444444"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 截图缩略图 -->
                            <Border Grid.Column="0" 
                                    Margin="8"
                                    CornerRadius="4"
                                    BorderThickness="1"
                                    MaxWidth="120">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="BorderBrush" Value="#555555"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Image x:Name="ScreenshotThumbnail"
                                       MaxHeight="60"
                                       Stretch="Uniform"
                                       Cursor="Hand"
                                       MouseLeftButtonDown="ScreenshotThumbnail_Click"
                                       ToolTip="点击查看大图"/>
                            </Border>
                            
                            <!-- 文件信息 -->
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        Margin="5,0">
                                <TextBlock Text="📷 已添加截图"
                                           FontSize="12"
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#333333"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock x:Name="ScreenshotInfo"
                                           Text="点击图片预览"
                                           FontSize="10"
                                           Opacity="0.7">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#666666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                            
                            <!-- 删除按钮 -->
                            <Button Grid.Column="2"
                                    x:Name="RemoveScreenshotBtn"
                                    Content="×"
                                    Width="20"
                                    Height="20"
                                    Margin="8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Click="RemoveScreenshot_Click"
                                    ToolTip="移除截图">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Foreground" Value="#999999"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#FF4444"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                    
                    <!-- 输入和按钮区域 -->
                    <Grid Grid.Row="1" MinHeight="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="0,0,5,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#F8F8F8"/>
                                    <Setter Property="BorderBrush" Value="#CCCCCC"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#1E1E1E"/>
                                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBox x:Name="DialogInput"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="12,8"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MaxLines="4"
                                     MinHeight="36"
                                     MaxHeight="100"
                                     VerticalAlignment="Center"
                                     FontSize="14">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="CaretBrush" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="CaretBrush" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Border>
                        
                        <!-- 图片上传按钮 -->
                        <Button x:Name="ImageUploadButton"
                                Grid.Column="1"
                                Content="🖼️"
                                Width="40"
                                Height="40"
                                BorderThickness="0"
                                Command="{Binding ImageUploadCommand}"
                                Cursor="Hand"
                                FontSize="16"
                                Margin="0,0,5,0"
                                ToolTip="上传图片">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#5B9BD5"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        BorderBrush="{TemplateBinding BorderBrush}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4A89CC"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#3A79BC"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- 截图按钮 -->
                        <Button x:Name="ScreenshotButton"
                                Grid.Column="2"
                                Content="📷"
                                Width="40"
                                Height="40"
                                BorderThickness="0"
                                Command="{Binding ScreenshotCommand}"
                                Cursor="Hand"
                                FontSize="16"
                                Margin="0,0,5,0"
                                ToolTip="截图">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#28A745"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#198754"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#218838"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1e7e34"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="SendButton"
                                Grid.Column="3"
                                Content="发送"
                                BorderThickness="0"
                                Command="{Binding SendMessageCommand}"
                                CommandParameter="{Binding ElementName=DialogInput, Path=Text}"
                                Cursor="Hand"
                                FontSize="14"
                                FontWeight="Bold"
                                Height="40">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#007ACC"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDarkTheme}" Value="True">
                                            <Setter Property="Background" Value="#0078D4"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#005A9B"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#004578"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
