<UserControl x:Class="Buddie.Controls.CardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie.Controls">
    
    
    <Grid>
        <!-- 堆叠的背景卡片 - 第三层 (最底层) -->
        <Border x:Name="StackCard3"
                Width="200"
                Height="150"
                Background="#E0E0E0"
                CornerRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,32,15"
                Effect="{StaticResource CardShadow}"
                Opacity="0.6">
            <Border.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="3" CenterX="100" CenterY="75"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        
        <!-- 堆叠的背景卡片 - 第二层 -->
        <Border x:Name="StackCard2"
                Width="200"
                Height="150"
                Background="#F0F0F0"
                CornerRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,35,10"
                Effect="{StaticResource CardShadow}"
                Opacity="0.8">
            <Border.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-2" CenterX="100" CenterY="75"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        
        <!-- 固定在右下角的卡片 - 主卡片 -->
        <Border x:Name="CardContainer"
                Width="200"
                Height="150"
                Background="White"
                CornerRadius="15"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,38,5"
                Effect="{StaticResource CardShadow}"
                MouseEnter="CardContainer_MouseEnter"
                MouseLeave="CardContainer_MouseLeave"
                MouseLeftButtonDown="CardContainer_MouseLeftButtonDown">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="CardScaleTransform"
                                    CenterX="100"
                                    CenterY="75"/>
                    <RotateTransform x:Name="CardRotateTransform"
                                     CenterX="100"
                                     CenterY="75"/>
                    <TranslateTransform x:Name="CardTranslateTransform"/>
                </TransformGroup>
            </Border.RenderTransform>
            <Grid>
                <!-- 卡片正面 -->
                <Border x:Name="CardFront"
                        Background="{StaticResource CardFrontGradient}"
                        CornerRadius="15">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="FrontText"
                                   Text="卡片正面"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="FrontTextShadow"
                                                  Color="Black"
                                                  Direction="0"
                                                  ShadowDepth="1"
                                                  Opacity="0.8"
                                                  BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="FrontSubText"
                                   Text="点击按钮翻转"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="FrontSubTextShadow"
                                                  Color="Black"
                                                  Direction="0"
                                                  ShadowDepth="1"
                                                  Opacity="0.7"
                                                  BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <!-- 卡片背面 -->
                <Border x:Name="CardBack"
                        Background="{StaticResource CardBackGradient}"
                        CornerRadius="15"
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock x:Name="BackText"
                                   Text="卡片背面"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="BackTextShadow"
                                                  Color="Black"
                                                  Direction="0"
                                                  ShadowDepth="1"
                                                  Opacity="0.8"
                                                  BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="BackSubText"
                                   Text="再次点击翻回"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect x:Name="BackSubTextShadow"
                                                  Color="Black"
                                                  Direction="0"
                                                  ShadowDepth="1"
                                                  Opacity="0.7"
                                                  BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <!-- 悬停时显示的按钮 -->
                <StackPanel x:Name="HoverButtons"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Margin="0,10,0,0"
                            Visibility="Collapsed">
                    <Button x:Name="DialogButton"
                            Content="💬"
                            Width="30"
                            Height="30"
                            Margin="5,0"
                            Background="#80FFFFFF"
                            Foreground="#333333"
                            BorderThickness="0"
                            FontSize="14"
                            Command="{Binding DialogCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Cursor="Hand"
                            ToolTip="对话"
                            Style="{StaticResource CircularButtonStyle}"/>
                    <Button x:Name="BuddieButton"
                            Content="🤖"
                            Width="30"
                            Height="30"
                            Margin="5,0"
                            Background="#80FFFFFF"
                            Foreground="#333333"
                            BorderThickness="0"
                            FontSize="14"
                            Command="{Binding BuddieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Cursor="Hand"
                            ToolTip="Buddie实时交互"
                            Style="{StaticResource CircularButtonStyle}"/>
                    <Button x:Name="SettingsButton"
                            Content="⚙"
                            Width="30"
                            Height="30"
                            Margin="5,0"
                            Background="#80FFFFFF"
                            Foreground="#333333"
                            BorderThickness="0"
                            FontSize="14"
                            Command="{Binding SettingsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Cursor="Hand"
                            ToolTip="设置"
                            Style="{StaticResource CircularButtonStyle}"/>
                </StackPanel>
                <!-- 卡片信息显示 - 位于卡片右下角 -->
                <Border x:Name="CardInfoContainer"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,10,10"
                        Background="#80FFFFFF"
                        CornerRadius="8"
                        Padding="4,2">
                    <TextBlock x:Name="CardInfo"
                               Text="卡片 1 / 4"
                               Foreground="#333333"
                               FontSize="10"
                               FontWeight="Medium"/>
                </Border>
            </Grid>
        </Border>
        
        <!-- 左边按钮 - 用于切换卡片 -->
        <Button x:Name="LeftFlipButton"
                Content="◀"
                Width="35"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,235,75"
                Background="#40FFFFFF"
                Foreground="#666666"
                BorderThickness="0"
                FontSize="12"
                FontWeight="Bold"
                Click="LeftFlipButton_Click"
                Cursor="Hand"
                ToolTip="上一张卡片 / 翻转卡片（当卡片已翻转时）">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#60FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#80FFFFFF"/>
                            <Setter Property="Foreground"
                                    Value="#000000"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Background"
                                    Value="#20FFFFFF"/>
                            <Setter Property="Foreground"
                                    Value="#40666666"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        
        <!-- 右边按钮 - 用于切换卡片 -->
        <Button x:Name="RightFlipButton"
                Content="▶"
                Width="35"
                Height="35"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,5,75"
                Background="#40FFFFFF"
                Foreground="#666666"
                BorderThickness="0"
                FontSize="12"
                FontWeight="Bold"
                Click="RightFlipButton_Click"
                Cursor="Hand"
                ToolTip="下一张卡片 / 翻转卡片（当卡片已翻转时）">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#60FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#80FFFFFF"/>
                            <Setter Property="Foreground"
                                    Value="#000000"/>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Background"
                                    Value="#20FFFFFF"/>
                            <Setter Property="Foreground"
                                    Value="#40666666"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</UserControl>
