<UserControl x:Class="Buddie.Controls.TtsConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie"
             xmlns:loc="clr-namespace:Buddie.Localization">

    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{loc:Resx TTS_Header}"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Grid.Column="1"
                    Content="{loc:Resx TTS_AddButton}"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontWeight="Bold"
                    Command="{Binding AddCommand}"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
        
        <!-- TTS配置列表 -->
        <ItemsControl x:Name="TtsConfigList" ItemsSource="{Binding Configurations}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="12"
                            Margin="0,8"
                            Padding="20"
                            BorderThickness="1"
                            Effect="{StaticResource CardShadow}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- 编辑模式和显示模式 -->
                        <Grid>
                            <!-- 编辑模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 渠道类型 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{loc:Resx TtsConfig_ChannelType}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <ComboBox Grid.Row="0" Grid.Column="1"
                                              SelectedValue="{Binding ChannelType, Mode=TwoWay}"
                                              SelectedValuePath="Tag"
                                              Margin="0,0,10,8"
                                              Padding="10,8"
                                              >
                                        <ComboBox.Style>
                                            <Style TargetType="ComboBox">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="BorderBrush" Value="#CED4DA"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ComboBox">
                                                            <Grid>
                                                                <Border Name="Border"
                                                                        CornerRadius="6"
                                                                        Background="{TemplateBinding Background}"
                                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="30"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        
                                                                        <ContentPresenter Name="ContentSite"
                                                                                          Grid.Column="0"
                                                                                          IsHitTestVisible="False"
                                                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                          Margin="10,8,5,8"
                                                                                          VerticalAlignment="Center"
                                                                                          HorizontalAlignment="Left"/>
                                                                        
                                                                        <ToggleButton Name="ToggleButton"
                                                                                      Grid.Column="1"
                                                                                      Focusable="False"
                                                                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                      ClickMode="Press"
                                                                                      Background="Transparent"
                                                                                      BorderThickness="0">
                                                                            <Path Name="Arrow"
                                                                                  HorizontalAlignment="Center"
                                                                                  VerticalAlignment="Center"
                                                                                  Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                  Fill="#6C757D"/>
                                                                        </ToggleButton>
                                                                        
                                                                        <TextBox x:Name="PART_EditableTextBox"
                                                                                 Grid.Column="0"
                                                                                 Style="{x:Null}"
                                                                                 HorizontalAlignment="Left"
                                                                                 VerticalAlignment="Center"
                                                                                 Margin="10,8,5,8"
                                                                                 Focusable="True"
                                                                                 Background="Transparent"
                                                                                 BorderThickness="0"
                                                                                 Visibility="Hidden"
                                                                                 IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                                    </Grid>
                                                                </Border>
                                                                <Popup Name="Popup"
                                                                       Placement="Bottom"
                                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True"
                                                                       Focusable="False"
                                                                       PopupAnimation="Slide">
                                                                    <Grid Name="DropDown"
                                                                          SnapsToDevicePixels="True"
                                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                        <Border x:Name="DropDownBorder"
                                                                                Background="White"
                                                                                BorderThickness="1"
                                                                                BorderBrush="#CED4DA"
                                                                                CornerRadius="6"
                                                                                Effect="{StaticResource CardShadow}"/>
                                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True" Style="{StaticResource ModernScrollViewerStyle}">
                                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Grid>
                                                                </Popup>
                                                            </Grid>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsEnabled" Value="False">
                                                                    <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                                </Trigger>
                                                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                    <Setter TargetName="Border" Property="Background" Value="#2D2D30"/>
                                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#3F3F46"/>
                                                                    <Setter TargetName="DropDownBorder" Property="Background" Value="#2D2D30"/>
                                                                    <Setter TargetName="DropDownBorder" Property="BorderBrush" Value="#3F3F46"/>
                                                                    <Setter TargetName="Arrow" Property="Fill" Value="White"/>
                                                                    <Setter Property="Foreground" Value="White"/>
                                                                </DataTrigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="ItemContainerStyle">
                                                    <Setter.Value>
                                                        <Style TargetType="ComboBoxItem">
                                                            <Setter Property="Padding" Value="10,8"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ComboBoxItem">
                                                                        <Border Name="Border" 
                                                                                Background="Transparent" 
                                                                                Padding="{TemplateBinding Padding}">
                                                                            <ContentPresenter/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsHighlighted" Value="True">
                                                                                <Setter TargetName="Border" Property="Background" Value="#E9ECEF"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsSelected" Value="True">
                                                                                <Setter TargetName="Border" Property="Background" Value="#007BFF"/>
                                                                                <Setter Property="Foreground" Value="White"/>
                                                                            </Trigger>
                                                                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                                                <Setter Property="Foreground" Value="White"/>
                                                                            </DataTrigger>
                                                                            <MultiDataTrigger>
                                                                                <MultiDataTrigger.Conditions>
                                                                                    <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                                    <Condition Binding="{Binding IsHighlighted, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                                </MultiDataTrigger.Conditions>
                                                                                <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                                                            </MultiDataTrigger>
                                                                            <MultiDataTrigger>
                                                                                <MultiDataTrigger.Conditions>
                                                                                    <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                                                    <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                                                </MultiDataTrigger.Conditions>
                                                                                <Setter TargetName="Border" Property="Background" Value="#555555"/>
                                                                            </MultiDataTrigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ComboBox.Style>
                                        <ComboBoxItem Content="OpenAI" Tag="OpenAI"/>
                                        <ComboBoxItem Content="ElevenLabs" Tag="ElevenLabs"/>
                                        <ComboBoxItem Content="MiniMax" Tag="MiniMax"/>
                                    </ComboBox>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="{loc:Resx TtsConfig_ConfigName}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding Name, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- API URL -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               x:Uid="Tts_Edit_ApiUrlLabel"
                                               Text="{loc:Resx Common_ApiUrl_Label}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding RequiresApiUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding ApiUrl, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"
                                             Visibility="{Binding RequiresApiUrl, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- API Key -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="{Binding ApiKeyLabel}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding RequiresApiKey, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="3" Grid.Column="1"
                                             Text="{Binding ApiKey, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"
                                             Visibility="{Binding RequiresApiKey, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Model -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="{Binding ModelLabel}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding RequiresModel, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Text="{Binding Model, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             ToolTip="{Binding ModelTooltip}"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"
                                             Visibility="{Binding RequiresModel, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Voice -->
                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               Text="{Binding VoiceLabel}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding RequiresVoice, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="5" Grid.Column="1"
                                             Text="{Binding Voice, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             ToolTip="{Binding VoiceTooltip}"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"
                                             Visibility="{Binding RequiresVoice, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    
                                    <!-- Speed -->
                                    <TextBlock Grid.Row="6" Grid.Column="0"
                                               Text="{loc:Resx TtsConfig_Speed}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Grid Grid.Row="6" Grid.Column="1"
                                          Margin="0,0,10,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="TtsEditSpeedSlider"
                                                Grid.Column="0"
                                                Minimum="{Binding MinSpeed}"
                                                Maximum="{Binding MaxSpeed}"
                                                Value="{Binding Speed, Mode=TwoWay}"
                                                TickFrequency="0.1"
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="TtsEditSpeedSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Speed, StringFormat={}{0:F2}x}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    

                                    
                                    <!-- Activate TTS -->
                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                               Text="{loc:Resx TtsConfig_ActivateTTS}"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <CheckBox Grid.Row="7" Grid.Column="1"
                                              IsChecked="{Binding IsActive, Mode=TwoWay}"
                                              Margin="0,0,10,15"
                                              VerticalAlignment="Center"
                                              ToolTip="{loc:Resx TtsConfig_ActivateTooltip}"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Command="{Binding DataContext.ToggleActivateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding}"/>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="8" Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,10,10,0">
                                        <Button Content="{loc:Resx Button_Save}"
                                                Background="#007BFF"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                Margin="0,0,10,0"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="{loc:Resx Button_Cancel}"
                                                Background="#6C757D"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 显示模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#212529"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- 渠道类型 -->
                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx TtsConfig_ChannelType}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ChannelType}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- API URL -->
                                    <StackPanel Grid.Row="2" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8"
                                                Visibility="{Binding RequiresApiUrl, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock x:Uid="Tts_View_ApiUrlLabel"
                                                   Text="{loc:Resx Common_ApiUrl_Label}"
                                                   FontWeight="Bold"
                                                   Margin="0,0,4,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ApiUrl}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 模型 -->
                                    <StackPanel Grid.Row="3" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx TtsConfig_Model}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Model}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 语音 -->
                                    <StackPanel Grid.Row="4" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx TtsConfig_Voice}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Voice}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 激活状态 -->
                                    <StackPanel Grid.Row="5" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{loc:Resx TtsConfig_ActivationStatus}"/>
                                            <Run Text=": "/>
                                        </TextBlock>
                                        
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Setter Property="Text" Value="{loc:Resx TtsConfig_NotActivated}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Text" Value="{loc:Resx TtsConfig_Activated}"/>
                                                            <Setter Property="Foreground" Value="#28A745"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button Margin="10,0,0,0"
                                                Content="{loc:Resx Button_Activate}"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.ActivateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
                                                    <Setter Property="Background" Value="#28A745"/>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Grid.RowSpan="7"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="{loc:Resx Button_Edit}"
                                                Background="#FFC107"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Margin="0,0,8,0"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="{loc:Resx Button_Delete}"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                FontWeight="Bold"
                                                Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- 当没有配置时显示的提示 -->
        <Border x:Name="NoTtsConfigMessage"
                CornerRadius="8"
                Padding="30,20"
                Margin="0,10"
                BorderThickness="1"
                Visibility="Visible">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#DEE2E6"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🔊"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="{loc:Resx TtsConfig_NoConfig}"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="{loc:Resx TtsConfig_NoConfigHint}"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- 测试区域 -->
        <Border CornerRadius="12"
                Margin="0,20,0,20"
                Padding="20"
                BorderThickness="1"
                Effect="{StaticResource CardShadow}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#E0E6ED"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <TextBlock Text="{loc:Resx Button_TestPlay}"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,15">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#212529"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TestTextBox"
                             Grid.Column="0"
                             Text="{loc:Resx TtsConfig_TestMessageSample}"
                             Margin="0,0,10,0"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Padding="10,8"
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="{loc:Resx Button_TestPlay}"
                            Background="#17A2B8"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontWeight="Bold"
                            Click="TestTts_Click"
                            Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
