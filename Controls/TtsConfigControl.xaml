<UserControl x:Class="Buddie.Controls.TtsConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="OpenAI TTS 配置"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <Button Grid.Column="1"
                    Content="+ 添加TTS配置"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontWeight="Bold"
                    Click="AddTtsConfig_Click"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
        
        <!-- TTS配置列表 -->
        <ItemsControl x:Name="TtsConfigList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="12"
                            Margin="0,8"
                            Padding="20"
                            BorderThickness="1"
                            Effect="{StaticResource CardShadow}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E6ED"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#3F3F46"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <!-- 编辑模式和显示模式 -->
                        <Grid>
                            <!-- 编辑模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="配置名称:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding Name, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- API URL -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="API URL:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding ApiUrl, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- API Key -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="API Key:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="2" Grid.Column="1"
                                             Text="{Binding ApiKey, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource MultilineTextBoxStyle}"
                                             Padding="10,8"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"
                                             MaxHeight="120"
                                             VerticalScrollBarVisibility="Auto"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- Model -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="模型:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="3" Grid.Column="1"
                                             Text="{Binding Model, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             ToolTip="例如: tts-1, tts-1-hd 或其他支持的模型"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- Voice -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="语音:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Text="{Binding Voice, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Padding="10,8"
                                             ToolTip="例如: alloy, echo, fable, onyx, nova, shimmer 或其他支持的语音"
                                             MouseDoubleClick="TextBox_MouseDoubleClick"/>
                                    
                                    <!-- Speed -->
                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               Text="语速:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Grid Grid.Row="5" Grid.Column="1"
                                          Margin="0,0,10,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="TtsEditSpeedSlider"
                                                Grid.Column="0"
                                                Minimum="0.25"
                                                Maximum="4.0"
                                                Value="{Binding Speed, Mode=TwoWay}"
                                                TickFrequency="0.25"
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="TtsEditSpeedSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Speed, StringFormat={}{0:F2}x}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                    
                                    <!-- Streaming Enable -->
                                    <TextBlock Grid.Row="6" Grid.Column="0"
                                               Text="流式朗读:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <CheckBox Grid.Row="6" Grid.Column="1"
                                              IsChecked="{Binding IsStreamingEnabled, Mode=TwoWay}"
                                              Margin="0,0,10,15"
                                              VerticalAlignment="Center"
                                              ToolTip="开启后，AI回复过程中会实时朗读内容"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="StreamingTts_Changed"
                                              Unchecked="StreamingTts_Changed"/>
                                    
                                    <!-- Activate TTS -->
                                    <TextBlock Grid.Row="7" Grid.Column="0"
                                               Text="激活TTS:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#495057"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="#CCCCCC"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <CheckBox Grid.Row="7" Grid.Column="1"
                                              IsChecked="{Binding IsActive, Mode=TwoWay}"
                                              Margin="0,0,10,15"
                                              VerticalAlignment="Center"
                                              ToolTip="激活后，该配置将用于对话界面的语音合成"
                                              Style="{StaticResource ToggleSwitchStyle}"
                                              Checked="ActivateTts_Checked"
                                              Unchecked="ActivateTts_Unchecked"/>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="8" Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,10,10,0">
                                        <Button Content="保存"
                                                Background="#007BFF"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                Margin="0,0,10,0"
                                                FontWeight="Bold"
                                                Click="SaveTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="取消"
                                                Background="#6C757D"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                FontWeight="Bold"
                                                Click="CancelTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 显示模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Margin="0,0,0,8">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#212529"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter Property="Foreground" Value="White"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- API URL -->
                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="API URL: "
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding ApiUrl}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 模型 -->
                                    <StackPanel Grid.Row="2" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="模型: "
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Model}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 语音 -->
                                    <StackPanel Grid.Row="3" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="语音: "
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Voice}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 流式朗读状态 -->
                                    <StackPanel Grid.Row="4" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock Text="流式朗读: "
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#495057"/>
                                                    <Setter Property="Text" Value="已禁用"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#CCCCCC"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsStreamingEnabled}" Value="True">
                                                            <Setter Property="Text" Value="已启用"/>
                                                            <Setter Property="Foreground" Value="#28A745"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- 激活状态 -->
                                    <StackPanel Grid.Row="5" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock Text="激活状态: "
                                                   FontWeight="Bold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#6C757D"/>
                                                    <Setter Property="Text" Value="未激活"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                            <Setter Property="Foreground" Value="#AAAAAA"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Text" Value="已激活"/>
                                                            <Setter Property="Foreground" Value="#28A745"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button Margin="10,0,0,0"
                                                Content="激活"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="8,4"
                                                FontSize="12"
                                                FontWeight="Bold"
                                                Click="ActivateTtsConfig_Click"
                                                Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonStyle}">
                                                    <Setter Property="Background" Value="#28A745"/>
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Grid.RowSpan="6"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="编辑"
                                                Background="#FFC107"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Margin="0,0,8,0"
                                                FontWeight="Bold"
                                                Click="EditTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="删除"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                FontWeight="Bold"
                                                Click="RemoveTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- 当没有配置时显示的提示 -->
        <Border x:Name="NoTtsConfigMessage"
                CornerRadius="8"
                Padding="30,20"
                Margin="0,10"
                BorderThickness="1"
                Visibility="Visible">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#F8F9FA"/>
                    <Setter Property="BorderBrush" Value="#DEE2E6"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🔊"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="暂无TTS配置"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <TextBlock Text="点击右上角【添加TTS配置】按钮来添加第一个配置"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#6C757D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="#AAAAAA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
        
        <!-- 测试区域 -->
        <Border CornerRadius="12"
                Margin="0,20,0,20"
                Padding="20"
                BorderThickness="1"
                Effect="{StaticResource CardShadow}">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#E0E6ED"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <TextBlock Text="测试播放"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,15">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#212529"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TestTextBox"
                             Grid.Column="0"
                             Text="Hello, this is a test message for TTS."
                             Margin="0,0,10,0"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Padding="10,8"
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="测试播放"
                            Background="#17A2B8"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontWeight="Bold"
                            Click="TestTts_Click"
                            Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
