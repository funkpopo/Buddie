<UserControl x:Class="Buddie.Controls.TtsConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Buddie">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <StackPanel Margin="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="OpenAI TTS 配置"
                       FontWeight="Bold"
                       FontSize="16"
                       Margin="0,0,0,15"
                       Foreground="Black"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1"
                    Content="+ 添加TTS配置"
                    Background="#28A745"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="12,8"
                    FontWeight="Bold"
                    Click="AddTtsConfig_Click"
                    Cursor="Hand"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </Grid>
        
        <!-- TTS配置列表 -->
        <ItemsControl x:Name="TtsConfigList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White"
                            CornerRadius="12"
                            Margin="0,8"
                            Padding="20"
                            BorderBrush="#E0E6ED"
                            BorderThickness="1"
                            Effect="{StaticResource CardShadow}">
                        <!-- 编辑模式和显示模式 -->
                        <Grid>
                            <!-- 编辑模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="配置名称:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <TextBox Grid.Row="0" Grid.Column="1"
                                             Text="{Binding Name, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Background="#F8F9FA"
                                             BorderBrush="#DEE2E6"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             GotFocus="TextBox_GotFocus"/>
                                    
                                    <!-- API URL -->
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="API URL:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <TextBox Grid.Row="1" Grid.Column="1"
                                             Text="{Binding ApiUrl, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Background="#F8F9FA"
                                             BorderBrush="#DEE2E6"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             GotFocus="TextBox_GotFocus"/>
                                    
                                    <!-- API Key -->
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="API Key:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <PasswordBox Grid.Row="2" Grid.Column="1"
                                                 x:Name="TtsApiKeyBox"
                                                 Margin="0,0,10,8"
                                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                                 Background="#F8F9FA"
                                                 BorderBrush="#DEE2E6"
                                                 BorderThickness="1"
                                                 Padding="10,8"
                                                 PasswordChanged="TtsApiKeyBox_PasswordChanged"/>
                                    
                                    <!-- Model -->
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="模型:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <TextBox Grid.Row="3" Grid.Column="1"
                                             Text="{Binding Model, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Background="#F8F9FA"
                                             BorderBrush="#DEE2E6"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             ToolTip="例如: tts-1, tts-1-hd 或其他支持的模型"
                                             GotFocus="TextBox_GotFocus"/>
                                    
                                    <!-- Voice -->
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="语音:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,8"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Text="{Binding Voice, Mode=TwoWay}"
                                             Margin="0,0,10,8"
                                             Style="{StaticResource RoundedTextBoxStyle}"
                                             Background="#F8F9FA"
                                             BorderBrush="#DEE2E6"
                                             BorderThickness="1"
                                             Padding="10,8"
                                             ToolTip="例如: alloy, echo, fable, onyx, nova, shimmer 或其他支持的语音"
                                             GotFocus="TextBox_GotFocus"/>
                                    
                                    <!-- Speed -->
                                    <TextBlock Grid.Row="5" Grid.Column="0"
                                               Text="语速:"
                                               FontWeight="Bold"
                                               Margin="0,0,10,15"
                                               VerticalAlignment="Center"
                                               Foreground="#495057"/>
                                    <Grid Grid.Row="5" Grid.Column="1"
                                          Margin="0,0,10,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider x:Name="TtsEditSpeedSlider"
                                                Grid.Column="0"
                                                Minimum="0.25"
                                                Maximum="4.0"
                                                Value="{Binding Speed, Mode=TwoWay}"
                                                TickFrequency="0.25"
                                                IsSnapToTickEnabled="True"
                                                ValueChanged="TtsEditSpeedSlider_ValueChanged"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Speed, StringFormat={}{0:F2}x}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   Foreground="#495057"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="6" Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Margin="0,10,10,0">
                                        <Button Content="保存"
                                                Background="#007BFF"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                Margin="0,0,10,0"
                                                FontWeight="Bold"
                                                Click="SaveTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="取消"
                                                Background="#6C757D"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="16,8"
                                                FontWeight="Bold"
                                                Click="CancelTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- 显示模式 -->
                            <StackPanel Visibility="{Binding IsEditMode, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 配置名称 -->
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               Foreground="#212529"
                                               Margin="0,0,0,8"/>
                                    
                                    <!-- API URL -->
                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="API URL: "
                                                   FontWeight="Bold"
                                                   Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding ApiUrl}"
                                                   Foreground="#495057"/>
                                    </StackPanel>
                                    
                                    <!-- 模型 -->
                                    <StackPanel Grid.Row="2" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,8">
                                        <TextBlock Text="模型: "
                                                   FontWeight="Bold"
                                                   Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding Model}"
                                                   Foreground="#495057"/>
                                    </StackPanel>
                                    
                                    <!-- 语音 -->
                                    <StackPanel Grid.Row="3" Grid.Column="0"
                                                Orientation="Horizontal"
                                                Margin="0,0,0,15">
                                        <TextBlock Text="语音: "
                                                   FontWeight="Bold"
                                                   Foreground="#6C757D"/>
                                        <TextBlock Text="{Binding Voice}"
                                                   Foreground="#495057"/>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Row="0" Grid.Column="1"
                                                Grid.RowSpan="4"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="编辑"
                                                Background="#FFC107"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                Margin="0,0,8,0"
                                                FontWeight="Bold"
                                                Click="EditTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                        <Button Content="删除"
                                                Background="#DC3545"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                                FontWeight="Bold"
                                                Click="RemoveTtsConfig_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource RoundedButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- 当没有配置时显示的提示 -->
        <Border x:Name="NoTtsConfigMessage"
                Background="#F8F9FA"
                CornerRadius="8"
                Padding="30,20"
                Margin="0,10"
                BorderBrush="#DEE2E6"
                BorderThickness="1"
                Visibility="Visible">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🔊"
                           FontSize="32"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock Text="暂无TTS配置"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="点击右上角【添加TTS配置】按钮来添加第一个配置"
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- 测试区域 -->
        <Border Background="White"
                CornerRadius="12"
                Margin="0,20,0,20"
                Padding="20"
                BorderBrush="#E0E6ED"
                BorderThickness="1"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="测试播放"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,0,0,15"
                           Foreground="#212529"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TestTextBox"
                             Grid.Column="0"
                             Text="Hello, this is a test message for TTS."
                             Margin="0,0,10,0"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Background="#F8F9FA"
                             BorderBrush="#DEE2E6"
                             BorderThickness="1"
                             Padding="10,8"
                             VerticalAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="测试播放"
                            Background="#17A2B8"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontWeight="Bold"
                            Click="TestTts_Click"
                            Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
