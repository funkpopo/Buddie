<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:utils="clr-namespace:Lyxie_desktop.Utils"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="760"
             x:Class="Lyxie_desktop.Views.MainView">

    <!-- 使用Border包装Grid以支持BoxShadow -->
    <Border Name="MainViewBorder" BoxShadow="inset 0 0 15 0 Transparent">
        <Grid>
            <!-- 添加微妙的背景渐变效果 -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource AppBackgroundGradientStartColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource AppBackgroundGradientEndColor}" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- 词云背景层 - 覆盖整个主界面 -->
            <Border Name="WordCloudContainer"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    ZIndex="1">
                <!-- 词云控件将在代码中动态添加 -->
            </Border>

        <!-- 设置按钮 -->
        <Button Name="SettingsButton"
                Width="40"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                ZIndex="3">
            <materialIcons:MaterialIcon Kind="Settings"
                                        Width="24"
                                        Height="24"
                                        Foreground="{DynamicResource IconBrush}" />

            <!-- 按钮悬停效果 -->
            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                </Style>
            </Button.Styles>
        </Button>

        <!-- 扳手按钮 -->
        <Button Name="ToolButton"
                Width="40"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                ZIndex="3">
            <materialIcons:MaterialIcon Kind="Wrench"
                                        Width="24"
                                        Height="24"
                                        Foreground="{DynamicResource IconBrush}" />

            <!-- 按钮悬停效果 -->
            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background" Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                </Style>
            </Button.Styles>
        </Button>

        <!-- 光晕效果层 -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" ZIndex="1">
            <!-- 外层光晕 -->
            <Border Name="OuterGlow"
                    Width="680"
                    Height="680"
                    CornerRadius="340"
                    Opacity="0.15"
                    IsHitTestVisible="False">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="{DynamicResource GlowPrimaryColor}" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>

            <!-- 中层光晕 -->
            <Border Name="MiddleGlow"
                    Width="640"
                    Height="640"
                    CornerRadius="320"
                    Opacity="0.2"
                    IsHitTestVisible="False">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="{DynamicResource GlowSecondaryColor}" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="0.8"/>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>

            <!-- 内层光晕 -->
            <Border Name="InnerGlow"
                    Width="620"
                    Height="620"
                    CornerRadius="310"
                    Opacity="0.25"
                    IsHitTestVisible="False">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="{DynamicResource GlowAccentColor}" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="0.6"/>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
        </Grid>

        <!-- 主界面内容 -->
        <Button Name="MainCircleButton"
                Width="600"
                Height="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="300"
                BorderThickness="6"
                Cursor="Hand"
                ZIndex="2"
                utils:LinearGradientBrushHelper.RotateAngle="0">

            <!-- 按钮背景渐变 - 半球形立体效果，顶部面向用户 -->
            <Button.Background>
                <RadialGradientBrush Center="0.5,0.3" RadiusX="1.0" RadiusY="1.0">
                    <GradientStop Color="{DynamicResource ButtonBackgroundGradientStartColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource ButtonBackgroundGradientStartColor}" Offset="0.2"/>
                    <GradientStop Color="{DynamicResource ButtonBackgroundGradientEndColor}" Offset="0.6"/>
                    <GradientStop Color="{DynamicResource ButtonShadowColor}" Offset="0.9"/>
                    <GradientStop Color="{DynamicResource ButtonDeepShadowColor}" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>

            <!-- 按钮边框渐变 - 支持旋转动画，增强半球边缘 -->
            <Button.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#8ddcff" Offset="0"/>
                    <GradientStop Color="#5c87e3" Offset="0.2"/>
                    <GradientStop Color="#3c67e3" Offset="0.5"/>
                    <GradientStop Color="#2e00c2" Offset="0.8"/>
                    <GradientStop Color="#1a0080" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>

            <Button.Styles>
                <Style Selector="Button:pointerover">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush Center="0.5,0.25" RadiusX="1.1" RadiusY="1.1">
                                <GradientStop Color="{DynamicResource ButtonHoverGradientStartColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource ButtonHoverGradientStartColor}" Offset="0.15"/>
                                <GradientStop Color="{DynamicResource ButtonHoverGradientEndColor}" Offset="0.55"/>
                                <GradientStop Color="{DynamicResource ButtonShadowColor}" Offset="0.85"/>
                                <GradientStop Color="{DynamicResource ButtonDeepShadowColor}" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{DynamicResource ButtonHoverBorderGradientStartColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource ButtonHoverBorderGradientEndColor}" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style Selector="Button:pressed">
                    <Setter Property="Background">
                        <Setter.Value>
                            <RadialGradientBrush Center="0.5,0.4" RadiusX="0.9" RadiusY="0.9">
                                <GradientStop Color="{DynamicResource ButtonPressedGradientEndColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource ButtonPressedGradientStartColor}" Offset="0.3"/>
                                <GradientStop Color="{DynamicResource ButtonPressedGradientEndColor}" Offset="0.7"/>
                                <GradientStop Color="{DynamicResource ButtonShadowColor}" Offset="0.9"/>
                                <GradientStop Color="{DynamicResource ButtonDeepShadowColor}" Offset="1"/>
                            </RadialGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{DynamicResource ButtonHoverBorderGradientStartColor}" Offset="0"/>
                                <GradientStop Color="{DynamicResource ButtonHoverBorderGradientEndColor}" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Styles>
                
            <!-- Button内容：高光层和文本层 -->
            <Grid>
                <!-- 高光层 - 增强半球效果，顶部面向用户 -->
                <Border Width="580" Height="580" 
                        CornerRadius="290"
                        IsHitTestVisible="False">
                    <Border.Background>
                        <RadialGradientBrush Center="0.5,0.2" RadiusX="0.6" RadiusY="0.6">
                            <GradientStop Color="{DynamicResource ButtonHighlightColor}" Offset="0"/>
                            <GradientStop Color="{DynamicResource ButtonMidHighlightColor}" Offset="0.5"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Border.Background>
                </Border>

                <!-- 文本层 -->
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Name="AppNameTextBlock"
                               Text="Lyxie"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Name="ClickToStartTextBlock"
                               Text="点击开始对话"
                               FontSize="16"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               HorizontalAlignment="Center"
                               Opacity="0.9"/>
                </StackPanel>
            </Grid>
        </Button>

        <!-- 浮动工具面板 - 响应式布局 -->
        <Border Name="ToolPanel"
                MinWidth="220"
                MaxWidth="300"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="20,0,0,70"
                Background="{DynamicResource FloatingPanelBackgroundBrush}"
                BorderBrush="{DynamicResource FloatingPanelBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                BoxShadow="0 4 12 0 #40000000"
                Opacity="0"
                IsVisible="False">

            <Grid Margin="12">
                <!-- 定义行：标题 + 三个开关行 -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <!-- 标题行 -->
                    <RowDefinition Height="Auto"/>  <!-- TTS开关 -->
                    <RowDefinition Height="Auto"/>  <!-- 开发功能1 -->
                    <RowDefinition Height="Auto"/>  <!-- 开发功能2 -->
                </Grid.RowDefinitions>

                <!-- 定义列：图标、文本、开关 -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>    <!-- 图标列 -->
                    <ColumnDefinition Width="*"/>       <!-- 文本列，自适应 -->
                    <ColumnDefinition Width="Auto"/>    <!-- 开关列 -->
                </Grid.ColumnDefinitions>

                <!-- 标题 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           Text="工具设置"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryTextBrush}"
                           Margin="0,0,0,8"
                           HorizontalAlignment="Left"/>

                <!-- TTS开关行 -->
                <materialIcons:MaterialIcon Grid.Row="1" Grid.Column="0"
                                            Kind="VolumeHigh"
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource SecondaryIconBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"/>
                <TextBlock Grid.Row="1" Grid.Column="1"
                           Text="TTS"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="0,0,8,0"/>
                <ToggleSwitch Grid.Row="1" Grid.Column="2"
                              Name="TTSToggle"
                              OffContent=""
                              OnContent=""
                              Width="40"
                              VerticalAlignment="Center"/>

                <!-- 开发功能1开关行 -->
                <materialIcons:MaterialIcon Grid.Row="2" Grid.Column="0"
                                            Kind="Build"
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource SecondaryIconBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,6,8,0"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="开发功能1"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="0,6,8,0"/>
                <ToggleSwitch Grid.Row="2" Grid.Column="2"
                              Name="Dev1Toggle"
                              OffContent=""
                              OnContent=""
                              Width="40"
                              VerticalAlignment="Center"
                              Margin="0,6,0,0"/>

                <!-- 开发功能2开关行 -->
                <materialIcons:MaterialIcon Grid.Row="3" Grid.Column="0"
                                            Kind="Code"
                                            Width="16"
                                            Height="16"
                                            Foreground="{DynamicResource SecondaryIconBrush}"
                                            VerticalAlignment="Center"
                                            Margin="0,6,8,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1"
                           Text="开发功能2"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"
                           Margin="0,6,8,0"/>
                <ToggleSwitch Grid.Row="3" Grid.Column="2"
                              Name="Dev2Toggle"
                              OffContent=""
                              OnContent=""
                              Width="40"
                              VerticalAlignment="Center"
                              Margin="0,6,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Border>

</UserControl>
